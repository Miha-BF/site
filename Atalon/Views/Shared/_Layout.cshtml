<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Atalon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />


<style>
        .phone-number {
            margin-left: auto;
            margin-top: 10px;
        }

        .small-text {
            font-size: 14px;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;


            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            flex: 1;
        }



        h1 {
            font-size: 24px;
        }

        p {
            font-size: 16px;
            line-height: 1.5;

        }

        footer {
            bottom: 0;
            height: 4em;
            left: 0;
            background: linear-gradient(to bottom, transparent, #f1f1f1);
            text-align: center;
        }

       header{
            background: linear-gradient(to bottom, #f1f1f1, transparent); /* Градиентный фон от красного до белого */
       }
</style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light ">
            <div class="container" style="box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); background-color: transparent;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ЭТАЛОНТРАНС СПБ</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">О Нас</a>
                        </li>
                    </ul>
                    <div class="phone-number ml-4" style=" font-size:20px;">+7 909 590-22-77
                        <p class ="small-text">Работаем круглосуточно</p>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer >
        <div class="container">
            &copy; 2023 - Atalon - <a asp-area="" asp-controller="Home" asp-action="Form"> Form </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
